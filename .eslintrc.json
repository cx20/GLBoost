{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/flowtype"
    ],
    "plugins": [
        "import",
        "jest",
        "flowtype"
    ],
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "__get__"
                ]
            }
        ]
    }
}